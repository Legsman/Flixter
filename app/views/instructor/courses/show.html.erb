<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><strong><%= current_course.title %></strong></h1>
    <br class="clr" />
      <%= image_tag current_course.image, class: 'img img-responsive'%>
    <br/>
  <div class="text-center">
    <%= link_to 'Add a new section ...', new_instructor_course_section_path(current_course), class: 'btn btn-success btn-lg' %>
  </div>
        <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-warning pull-right' %>
        <br class="clr" />
    <ul>
    <% current_course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
           <%= link_to "New Lesson", new_instructor_section_lesson_path(section), class: 'pull-right btn btn-primary btn-xs' %>
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>


</div>